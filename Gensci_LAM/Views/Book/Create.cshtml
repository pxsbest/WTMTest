@model Gensci_LAM.ViewModel.BookVMs.BookVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Two">
        <wt:textbox field="Entity.BookName" />
        <wt:combobox field="Entity.BookType" />
        <wt:textbox field="Entity.Remark" />

        <wt:multiupload field="Entity.Photos" upload-mode="local" upload-subdir="aaa"
                        upload-type="ImageFile" preview-width="128" />

    </wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
